@{
    ViewData["Title"] = "Checkout";
}


<div class="row">
    <div class="col-lg-9" mx-auto rounded border p-3>
        <h2 class="text-center mb-5">Checkout Form</h2>

        <form method="post">    
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">First Name:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="firstname"/>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Last Name:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="lastname" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="email" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone Number:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="phonenumber" />
                </div>
            </div>
            
            <legend>Billing Address:</legend>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Country:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="countrybill" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">City:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="citybill" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Zipcode</label>
                <div class="col-sm-8">
                    <input class="form-control" name="zipcodebill" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Street:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="streetbill" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Number:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="numberbill" />
                </div>
            </div>

            <legend>Shipping Address:</legend>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Country:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="countryship" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">City:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="cityship" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Zipcode</label>
                <div class="col-sm-8">
                    <input class="form-control" name="zipcodeship" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Street:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="streetship" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Number:</label>
                <div class="col-sm-8">
                    <input class="form-control" name="numbership" />
                </div>
            </div>
            
            <label>&nbsp;</label>
                <input type="submit" value="Submit" class="submit" />

        </form>
    </div>
</div>



