<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GaRBuS Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">GaRBuS Shop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" id="categoriesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Product" asp-action="Categories">Categories</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Categories" asp-route-category="1">Rims</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Categories" asp-route-category="2">Tires</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Categories" asp-route-category="3">Trunks</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Categories" asp-route-category="4">Accessories</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" id="suppliersDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Product" asp-action="Suppliers">Suppliers</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Suppliers" asp-route-supplier="1">Ronal</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Suppliers" asp-route-supplier="2">Dotz</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Suppliers" asp-route-supplier="3">Alutec</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Suppliers" asp-route-supplier="4">Autec</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Suppliers" asp-route-supplier="5">Pirelli</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Suppliers" asp-route-supplier="6">Dezent</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Suppliers" asp-route-supplier="7">Rial</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Cart">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GaRBuS Shop - <a asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
